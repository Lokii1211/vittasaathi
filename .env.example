# ==============================================
# VittaSaathi v3.0 - Environment Variables
# ==============================================
# Copy this to .env and fill in your values
# Required fields are marked with [REQUIRED]

# ==============================================
# SERVER CONFIGURATION
# ==============================================
HOST=0.0.0.0
PORT=8000
DEBUG=false
SECRET_KEY=your-super-secret-key-change-this  # [REQUIRED] For session management

# ==============================================
# TWILIO CONFIGURATION (WhatsApp & SMS)
# ==============================================
# [REQUIRED] Get these from https://console.twilio.com
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_WHATSAPP_NUMBER=+14155238886
TWILIO_VOICE_NUMBER=+14155238886

# ==============================================
# EMAIL CONFIGURATION (SMTP)
# ==============================================
# For Gmail: Use App Password (not regular password)
# Enable 2FA â†’ Generate App Password at https://myaccount.google.com/apppasswords
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=your-email@gmail.com
SMTP_USE_TLS=true

# ==============================================
# CLOUD BACKUP - AWS S3 (Optional)
# ==============================================
# Get from AWS IAM Console
AWS_ACCESS_KEY_ID=AKIAxxxxxxxxxxxxxxxx
AWS_SECRET_ACCESS_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
AWS_REGION=ap-south-1
AWS_BUCKET_NAME=vittasaathi-backups

# ==============================================
# CLOUD BACKUP - GOOGLE CLOUD STORAGE (Optional)
# ==============================================
# Path to your service account JSON file
GCS_CREDENTIALS_PATH=/path/to/credentials.json
GCS_BUCKET_NAME=vittasaathi-backups

# ==============================================
# N8N INTEGRATION
# ==============================================
N8N_URL=http://localhost:5678
N8N_WEBHOOK_BASE=http://localhost:5678/webhook

# ==============================================
# ADMIN CONFIGURATION
# ==============================================
ADMIN_PHONE=+919876543210
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=secure-admin-password

# ==============================================
# BACKUP SETTINGS
# ==============================================
BACKUP_ENABLED=true
BACKUP_FREQUENCY=daily  # daily, weekly, monthly
BACKUP_TIME=02:00
BACKUP_ENCRYPT=true
BACKUP_RETENTION_DAYS=30
BACKUP_MAX_COUNT=10

# ==============================================
# OPTIONAL SERVICES
# ==============================================

# AlphaVantage (Market trends)
ALPHAVANTAGE_API_KEY=your_api_key

# OpenAI (AI features - NLP, Voice Transcription)
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ==============================================
# EVOLUTION API (Alternative to Twilio - Unlimited messages)
# ==============================================
# Self-hosted WhatsApp API - https://github.com/EvolutionAPI/evolution-api
EVOLUTION_API_URL=http://localhost:8080
EVOLUTION_API_KEY=your-evolution-api-key
EVOLUTION_INSTANCE_NAME=vittasaathi

# ==============================================
# WHATSAPP CLOUD API (Meta's Official API - Recommended)
# ==============================================
# Free tier: 1000 conversations/month
# No phone needed to be online! Works 24/7
# Get credentials at: https://developers.facebook.com
WHATSAPP_CLOUD_TOKEN=your_access_token_here
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
WHATSAPP_BUSINESS_ACCOUNT_ID=your_business_account_id
WHATSAPP_VERIFY_TOKEN=vittasaathi_webhook_verify_2024

# ==============================================
# PRODUCTION SETTINGS
# ==============================================
# Uncomment for production deployment

# DOMAIN=vittasaathi.com
# SSL_ENABLED=true
# CORS_ORIGINS=https://vittasaathi.com,https://www.vittasaathi.com

# Database (for production - currently using JSON files)
# DATABASE_URL=postgresql://user:password@localhost/vittasaathi

# Redis (for caching - optional)
# REDIS_URL=redis://localhost:6379

# ==============================================
# LOGGING
# ==============================================
LOG_LEVEL=INFO
LOG_FILE=logs/vittasaathi.log

# ==============================================
# RATE LIMITING
# ==============================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60  # seconds
